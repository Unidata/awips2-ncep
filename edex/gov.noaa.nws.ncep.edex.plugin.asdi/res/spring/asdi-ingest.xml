<!-- class=" com.raytheon.uf.edex.distribution.DistributionSrv" -->
	<bean id="asdiDistRegistry" factory-bean="distributionSrv" 
		factory-method="register">
		<constructor-arg value="asdi" />
		<!-- <constructor-arg value="jms-durable:queue:Ingest.AlphaNumeric" />  -->
		<constructor-arg value="jms-durable:queue:Ingest.asdi" />
	</bean>

	<camelContext id="asdi-camel" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">
		<endpoint id="asdiFileEndpoint" uri="file:${edex.home}/data/sbn/asdi?noop=true&amp;idempotent=false"/>

		<!-- Begin Asdi routes -->
		<route id="asdiFileConsumerRoute">
			<from ref="asdiFileEndpoint" />
			<bean ref="fileToString" />
			<setHeader headerName="pluginName">
				<constant>asdi</constant>
			</setHeader>
			<to uri="jms-durable:queue:Ingest.asdi" />
		</route>

		<route id="asdiIngestRoute">
			<from uri="jms-durable:queue:Ingest.asdi" />
			<setHeader headerName="pluginName">
				<constant>asdi</constant>
			</setHeader>
			<bean ref="stringToFile" />
 
				<doTry>
					<pipeline>
						<bean ref="asdiDecoder" method="decode" />
						<to uri="direct-vm:indexAlert" />
					</pipeline>
					<doCatch>
						<exception>java.lang.Throwable</exception>
						<to uri="log:asdi?level=ERROR" />
					</doCatch>
				</doTry>
 
			<!--<bean ref="processUtil" method="delete" /> -->
		</route>
	</camelContext>
</beans>