<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
          id="gov.noaa.nws.ncep.viz.actions.gridManager"
          name="Ncgrid Manager">
         <commandParameter
               id="mode"
               name="mode"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   
      <extension
         point="org.eclipse.ui.handlers">
       <handler
            class="gov.noaa.nws.ncep.viz.gridManager.ui.GridManagerAction"
            commandId="gov.noaa.nws.ncep.viz.actions.gridManager">
       </handler>   
   </extension>

    <extension
          point="com.raytheon.uf.viz.localization.localizationpath">
       <path
             application="NCEP"
             localizationType="CAVE_STATIC"
             name="SPFs"
             recursive="true"
             value="ncep/SPFs"
	         extensionFilter=".xml">
       </path>
    </extension>

    <extension
          point="com.raytheon.uf.viz.localization.localizationpath">
       <path
             application="NCEP"
             localizationType="CAVE_STATIC"
             name="Resource Definitions"
             recursive="true"
             value="ncep/ResourceDefns/GRID"
	         extensionFilter=".xml,.attr">
       </path>
    </extension>
   <extension
          point="com.raytheon.uf.viz.localization.localizationpath">
       <path
             application="NCEP"
             localizationType="CAVE_STATIC"
             name="Attribute Set Groups"
             recursive="true"
             value="ncep/AttributeSetGroups/ModelFcstGridContours"
	         extensionFilter=".xml,.attr">
       </path>
    </extension>
    <extension
          point="com.raytheon.uf.viz.localization.localizationpath">
       <path
             application="NCEP"
             localizationType="CAVE_STATIC"
             name="Default RBDs"
             recursive="true"
             value="ncep/DefaultRBDs"
	         extensionFilter=".xml">
       </path>
    </extension>

</plugin>
