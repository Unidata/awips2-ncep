<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="com.raytheon.uf.viz.core.resource">
      <resource
            class="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.McidasSatResource"
            name="McidasSatellite"
            recordClass="gov.noaa.nws.ncep.common.dataplugin.mcidas.McidasRecord"
            renderingOrderId="IMAGE_COUNTRY"
            resourceType="PLAN_VIEW"/>
      <resource
            class="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.GiniSatResource"
            name="GiniSatellite"
            recordClass="com.raytheon.edex.plugin.satellite.SatelliteRecord"
            renderingOrderId="IMAGE_COUNTRY"
            resourceType="PLAN_VIEW">
      </resource>
   </extension>
   <extension
         point="gov.noaa.nws.ncep.viz.resources.NC-Resource">
      <nc-resource
            class="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.SatelliteResourceData"
            editDialogClass="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.EditSatelliteAttrsDialog"
            name="McidasSatellite">
      </nc-resource>
      <nc-resource
            class="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.SatelliteResourceData"
            editDialogClass="gov.noaa.nws.ncep.viz.rsc.satellite.rsc.EditSatelliteAttrsDialog"
            name="GiniSatellite">
      </nc-resource>
   </extension>
   <extension
         point="gov.noaa.nws.ncep.viz.resources.NC-ResourceParameter">
      <nc-resourceParameter
            paramClass="gov.noaa.nws.ncep.viz.ui.display.ColorBarFromColormap"
            paramName="colorBar"
            paramType="EDITABLE_ATTRIBUTE"
            paramRefLocation="ncep/ColorBars/Satellite"
            ncResourceName="GiniSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="String"
            paramName="colorMapName"
            paramType="EDITABLE_ATTRIBUTE"
            ncResourceName="GiniSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="gov.noaa.nws.ncep.viz.ui.display.ColorBarFromColormap"
            paramName="colorBar"
            paramType="EDITABLE_ATTRIBUTE"
            paramRefLocation="ncep/ColorBars/Satellite"
            ncResourceName="McidasSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="String"
            paramName="colorMapName"
            paramType="EDITABLE_ATTRIBUTE"
            ncResourceName="McidasSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="Float"
            paramName="alpha"
            paramType="EDITABLE_ATTRIBUTE"
            defaultValue="1.0"
            ncResourceName="McidasSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="Float"
            paramName="alpha"
            paramType="EDITABLE_ATTRIBUTE"
            defaultValue="1.0"
            ncResourceName="GiniSatellite">
      </nc-resourceParameter>
      <nc-resourceParameter
            paramClass="Float"
            paramName="brightness"
            paramType="EDITABLE_ATTRIBUTE"
            defaultValue="1.0"
            ncResourceName="McidasSatellite">
      </nc-resourceParameter>      
      <nc-resourceParameter
            paramClass="Float"
            paramName="brightness"
            paramType="EDITABLE_ATTRIBUTE"
            defaultValue="1.0"
            ncResourceName="GiniSatellite">
      </nc-resourceParameter>      
      <nc-resourceParameter
            paramClass="Float"
            paramName="contrast"
            paramType="EDITABLE_ATTRIBUTE"
            defaultValue="1.0"
            ncResourceName="McidasSatellite">
      </nc-resourceParameter>      
      <nc-resourceParameter
            paramClass="Float"
            paramName="contrast"
            defaultValue="1.0"
            paramType="EDITABLE_ATTRIBUTE"
            ncResourceName="GiniSatellite">
      </nc-resourceParameter>
      
      <nc-resourceParameter
            constraintName="creatingEntity"
            ncResourceName="GiniSatellite"
            paramClass="String"
            paramName="satelliteName"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <!-- the image type is given in the attrSet but we provide a
           default value here to pass validity checking -->
      <nc-resourceParameter
            constraintName="physicalElement"
            ncResourceName="GiniSatellite"
            paramClass="String"
            paramName="imageType"
            defaultValue="not-specified"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <nc-resourceParameter
            constraintName="sectorID"
            ncResourceName="GiniSatellite"
            paramClass="String"
            paramName="sectorID"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="String"
            paramName="satelliteName"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="String"
            paramName="imageType"
            defaultValue="not-specified"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="String"
            paramName="areaName"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="Integer"
            paramName="resolution"
            paramType="REQUEST_CONSTRAINT">
      </nc-resourceParameter>
      <nc-resourceParameter
            ncResourceName="GiniSatellite"
            paramClass="RGB"
            paramName="legendColor"
            defaultValue="RGB {155, 155, 155}"
            paramType="IMPLEMENTATION_PARAM">
      </nc-resourceParameter>
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="RGB"
            paramName="legendColor"
            defaultValue="RGB {155, 155, 155}"
            paramType="IMPLEMENTATION_PARAM">
      </nc-resourceParameter>      
      
      <nc-resourceParameter
            ncResourceName="GiniSatellite"
            paramClass="String"
            paramName="displayUnitStr"
            defaultValue="BRIT"
            paramType="NON_EDITABLE_ATTRIBUTE">
      </nc-resourceParameter>      
      <nc-resourceParameter
            ncResourceName="McidasSatellite"
            paramClass="String"
            paramName="displayUnitStr"
            defaultValue="BRIT"
            paramType="NON_EDITABLE_ATTRIBUTE">
      </nc-resourceParameter>      
      
   </extension>
   <extension
          point="com.raytheon.uf.viz.localization.localizationpath">
       	<path
             application="NCEP"
             localizationType="CAVE_STATIC"
             name="Style Rules"
             recursive="true"
             value="ncep/styleRules"
	         extensionFilter=".xml">
       </path>
    </extension>
    <extension point="gov.noaa.nws.ncep.viz.common.areaProvider">
       <areaProviderSource
             areaSourceName="MCIDAS_AREA_NAME"
             isImageBased="true"
             sourceFactory="gov.noaa.nws.ncep.viz.rsc.satellite.area.McIdasAreaProviderFactory"
             sourceLocation="mcidas|areaNames"/>    
       
       <areaProviderSource
             areaSourceName="GINI_SECTOR_ID"
             isImageBased="true"
             sourceFactory="gov.noaa.nws.ncep.viz.rsc.satellite.area.GiniAreaProviderFactory"
             sourceLocation="satellite|sector_id"/>    
               
   </extension>
    
</plugin>
